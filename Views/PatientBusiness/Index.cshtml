@{
    ViewData["Title"] = "Create  Business request";
}
@model HelloDoc.Models.ViewPatientBusiness
<partial name="../_Partial/_PartialConformationModel" />
<div class="justify-content-between d-flex container-fluid my-5 position-relative ">
    <div class="">
        <h1>  Create  Business request</h1>
    </div>
    <div>
        <a asp-action="Index" asp-controller="SubmitRequest" class="btn btn-outline-info"> ❮  Back </a>

    </div>
</div>
<div class="card border-0 shadow p-4 mb-5  rounded">
    <form class="row g-3 " asp-action="Post" asp-controller="PatientBusiness">

        <h4 class=" my-4">Business Information</h4>

        <div class="col-md-6 form-floating  ">
            <input asp-for="BUP_FirstName" class="form-control rounded" name="BUP_FirstName" type="text" placeholder="First Name" autocomplete=off>
            <label class="" for="floatingInput">Your First Name </label>
            <span asp-validation-for="BUP_FirstName" class="text-danger"></span>
        </div>
        <div class="col-md-6 form-floating">
            <input asp-for="BUP_LastName" class="form-control rounded" name="BUP_LastName" type="text" placeholder=Suchtext autocomplete=off>
            <label for="floatingInput">Your Last Name </label>
            <span asp-validation-for="BUP_LastName" class="text-danger"></span>
        </div>
        <div class="col-md-6 form-floating  ">
            <input asp-for="BUP_PhoneNumber" id="phone" type="number" name="BUP_PhoneNumber" class="form-control rounded" autocomplete=off>
            <span asp-validation-for="BUP_PhoneNumber" class="text-danger"></span>
        </div>
        <div class="col-md-6 form-floating  ">
            <input asp-for="BUP_Email" class="form-control rounded" name="BUP_Email" type="email" placeholder=Suchtext autocomplete=off>
            <label for="floatingInput">Your Email </label>
            <span asp-validation-for="BUP_Email" class="text-danger"></span>
        </div>
        <div class="col-md-6 form-floating  ">
            <input asp-for="BUP_PropertyName" class="form-control rounded" name="BUP_PropertyName" type="email" placeholder=Suchtext autocomplete=off>
            <label for="floatingInput">Business / Propety Name</label>
            <span asp-validation-for="BUP_PropertyName" class="text-danger"></span>
        </div>
        <div class="col-md-6 form-floating  ">
            <input asp-for="BUP_CaseNumber" class="form-control rounded" name="BUP_CaseNumber" type="email" placeholder=Suchtext autocomplete=off>
            <label for="floatingInput">Case Number ( Optional ) </label>
            <span asp-validation-for="BUP_CaseNumber" class="text-danger"></span>
        </div>

        <h4 class=" my-4 fw-bolder">Patient Information</h4>
        <div class="col-md-12 form-floating ">
            <textarea asp-for="Symptoms" class="form-control rounded" name="Symptoms" type="text" rows="5" placeholder=Suchtext autocomplete=off></textarea>
            <label for="floatingInput">Symptoms </label>
            <span asp-validation-for="Symptoms" class="text-danger"></span>
        </div>
        <div class="col-md-6 form-floating  ">
            <input asp-for="FirstName" class="form-control rounded" name="FirstName" type="text" placeholder="First Name" autocomplete=off>
            <label class="" for="floatingInput">First Name </label>
            <span asp-validation-for="FirstName" class="text-danger"></span>
        </div>
        <div class="col-md-6 form-floating">
            <input asp-for="LastName" class="form-control rounded" name="LastName" type="text" placeholder=Suchtext autocomplete=off>
            <label for="floatingInput">Last Name </label>
            <span asp-validation-for="LastName" class="text-danger"></span>
        </div>
        <div class="col-md-6 form-floating">
            <input asp-for="BirthDate" class="form-control rounded" name="BirthDate" type="date" placeholder=Suchtext autocomplete=off>
            <label for="floatingInput">Birth Date </label>
            <span asp-validation-for="BirthDate" class="text-danger"></span>
        </div>

        <h4 class=" my-4 fw-bolder">Patient Contact Information</h4>
        <div class="col-md-6 form-floating  my-1">
            <input asp-for="Email" class="form-control rounded" name="Email" type="email" placeholder=Suchtext autocomplete=off>
            <label for="floatingInput">Email </label>
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="col-md-6 form-floating  my-1">
            <input asp-for="PhoneNumber" id="phone1" type="tel" name="PhoneNumber" class="form-control rounded"  autocomplete=off>
            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
        </div>

        <h4 class=" my-4 fw-bolder">Patient Location</h4>
        <div class="col-md-6 form-floating ">
            <input asp-for="Street" class="form-control rounded" name="Street" type="text" placeholder=Suchtext autocomplete=off>
            <label for="floatingInput">Street </label>
            <span asp-validation-for="Street" class="text-danger"></span>
        </div>
        <div class="col-md-6 form-floating ">
            <input asp-for="City" class="form-control rounded" name="City" type="text" placeholder=Suchtext autocomplete=off>
            <label for="floatingInput">City</label>
            <span asp-validation-for="City" class="text-danger"></span>
        </div>
        <div class="col-md-6 form-floating ">
            <input asp-for="State" class="form-control rounded" name="State" type="text" placeholder=Suchtext autocomplete=off>
            <label for="floatingInput">State</label>
            <span asp-validation-for="State" class="text-danger"></span>
        </div>
        <div class="col-md-6 form-floating  ">
            <input asp-for="ZipCode" class="form-control rounded" name="ZipCode" type="text" placeholder=Suchtext autocomplete=off>
            <label for="floatingInput">Zip Code</label>
            <span asp-validation-for="ZipCode" class="text-danger"></span>
        </div>
        <div class="col-md-6 form-floating  ">
            <input asp-for="RoomSite" class="form-control rounded" name="RoomSite" type="text" placeholder=Suchtext autocomplete=off>
            <label for="floatingInput">Room / site ( Optional )</label>
            <span asp-validation-for="RoomSite" class="text-danger"></span>
        </div>

        <div class="text-end">
            <input type="submit" value="Create" class="btn btn-info text-white"> 
            <button class="btn btn-outline-info"> cancel </button>
        </div>
    </form>
</div>
