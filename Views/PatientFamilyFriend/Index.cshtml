@{
    ViewData["Title"] = "Create Family / friend request";
}
@model HelloDoc.Models.ViewPatientFamilyFriend
<partial name="../_Partial/_PartialConformationModel" />
<div class="justify-content-between d-flex container-fluid my-5 position-relative ">
    <div class="">
        <h1>  Create Family / friend request </h1>
    </div>
    <div>
        <a asp-action="Index" asp-controller="SubmitRequest" class="btn btn-outline-info"> ❮  Back </a>

    </div>
</div>
<div class="card border-0 shadow p-4 mb-5  rounded">
    <form class="row g-3 " asp-action="Post" asp-controller="PatientFamilyFriend">

        <h4 class=" my-4">Family / Friend Information</h4>

        <div class="col-md-6 form-floating  ">
            <input asp-for="FF_FirstName" class="form-control rounded" name="FF_FirstName" type="text" placeholder="First Name" autocomplete=off>
            <label class="" for="floatingInput">Your First Name </label>
        </div>
        <div class="col-md-6 form-floating">
            <input asp-for="FF_LastName" class="form-control rounded" name="FF_LastName" type="text" placeholder=Suchtext autocomplete=off>
            <label for="floatingInput">Your Last Name </label>
        </div>
        <div class="col-md-6 form-floating  ">
            <input asp-for="FF_PhoneNumber" id="phone" type="tel" name="FF_PhoneNumber" class="form-control rounded" placeholder="+91 9537290202" autocomplete=off>
        </div>
        <div class="col-md-6 form-floating  ">
            <input asp-for="FF_Email" class="form-control rounded" name="suche" type="email" placeholder=Suchtext autocomplete=off>
            <label for="floatingInput">Your Email </label>
        </div>
        <div class="col-md-6 form-floating  ">
            <input asp-for="FF_RelationWithPatient" class="form-control rounded" name="FF_RelationWithPatient" type="email" placeholder=Suchtext autocomplete=off>
            <label for="floatingInput">Relation with Patient</label>
        </div>

        <h4 class=" my-4 fw-bolder">Patient Information</h4>
        <div class="col-md-12 form-floating ">
            <textarea asp-for="Symptoms" class="form-control rounded" name="Symptoms" type="text" rows="5" placeholder=Suchtext autocomplete=off></textarea>
            <label for="floatingInput">Symptoms </label>
        </div>
        <div class="col-md-6 form-floating  ">
            <input asp-for="FirstName" class="form-control rounded" name="FirstName" type="text" placeholder="First Name" autocomplete=off>
            <label class="" for="floatingInput">First Name </label>
        </div>
        <div class="col-md-6 form-floating">
            <input asp-for="LastName" class="form-control rounded" name="LastName" type="text" placeholder=Suchtext autocomplete=off>
            <label for="floatingInput">Last Name </label>
        </div>
        <div class="col-md-6 form-floating">
            <input asp-for="BirthDate" class="form-control rounded" name="BirthDate" type="date" placeholder=Suchtext autocomplete=off>
            <label for="floatingInput">Birth Date </label>
        </div>

        <h4 class=" my-4 fw-bolder">Patient Contact Information</h4>
        <div class="col-md-6 form-floating  my-1">
            <input asp-for="Email" class="form-control rounded" name="Email" type="email" placeholder=Suchtext autocomplete=off>
            <label for="floatingInput">Email </label>
        </div>
        <div class="col-md-6 form-floating  my-1">
            <input asp-for="PhoneNumber" id="phone1" type="tel" name="PhoneNumber" class="form-control rounded" placeholder="+91 9537290202" autocomplete=off>
        </div>

        <h4 class=" my-4 fw-bolder">Patient Contact Information</h4>
        <div class="col-md-6 form-floating ">
            <input asp-for="Street" class="form-control rounded" name="Street" type="text" placeholder=Suchtext autocomplete=off>
            <label for="floatingInput">Street </label>
        </div>
        <div class="col-md-6 form-floating ">
            <input asp-for="City" class="form-control rounded" name="City" type="text" placeholder=Suchtext autocomplete=off>
            <label for="floatingInput">City</label>
        </div>
        <div class="col-md-6 form-floating ">
            <input asp-for="State" class="form-control rounded" name="State" type="text" placeholder=Suchtext autocomplete=off>
            <label for="floatingInput">State</label>
        </div>
        <div class="col-md-6 form-floating  ">
            <input asp-for="ZipCode" class="form-control rounded" name="ZipCode" type="text" placeholder=Suchtext autocomplete=off>
            <label for="floatingInput">Zip Code</label>
        </div>
        <div class="col-md-6 form-floating  ">
            <input asp-for="RoomSite" class="form-control rounded" name="RoomSite" type="text" placeholder=Suchtext autocomplete=off>
            <label for="floatingInput">Room / site ( Optional )</label>
        </div>

        <h4 class=" my-4">Upload Photo or Document ( Optional )</h4>
        <div class="col-md-12 form-floating  ">
            <div class="file-upload-wrapper border border-1" data-text="Select your file!">
                <input  name="file-upload-field" type="file" class="file-upload-field" value="">
            </div>
        </div>
        <div class="text-end">
            <input type="submit" class="btn btn-info text-white" value="submit">
            <button class="btn btn-outline-info"> cancel </button>
        </div>
    </form>
</div>

@section Scripts
    {
    @*<script src="https://cdnjs.cloudflare.com/ajax/libs/intl-tel-input/17.0.8/js/intlTelInput.min.js"></script>*@
    <script type="text/javascript">
        const phoneInputField = document.querySelector("#phone");
        const phoneInput = window.intlTelInput(phoneInputField, {
            preferredCountries: ["us", "co", "in", "de"],
            utilsScript:
                "https://cdnjs.cloudflare.com/ajax/libs/intl-tel-input/17.0.8/js/utils.js",
        });
        const phoneInputField1 = document.querySelector("#phone1");
        const phoneInput1 = window.intlTelInput(phoneInputField1, {
            preferredCountries: ["us", "co", "in", "de"],
            utilsScript:
                "https://cdnjs.cloudflare.com/ajax/libs/intl-tel-input/17.0.8/js/utils.js",
        });

        $(function () {
            $("form").on("change", ".file-upload-field", function () {
                $(this).parent(".file-upload-wrapper").attr("data-text", $(this).val().replace(/.*(\/|\\)/, ''));
            });
           
        });

    </script>
}